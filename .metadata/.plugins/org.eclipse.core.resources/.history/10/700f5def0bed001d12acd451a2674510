package Codigoprincipal;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.event.ActionEvent;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.util.Timer;
import java.util.concurrent.TimeUnit;

import javax.swing.JFrame;
import javax.swing.JPanel;


public class CuboDisparador extends JPanel implements KeyListener {
    private int cuboX = 150; // Posición inicial en x del cubo
    private int rectX = cuboX + 20; // Posición inicial en x del rectángulo disparado
    private int rectY = 360; // Posición inicial en y del rectángulo disparado
    private boolean disparoActivo = false; // Indicador de si hay un disparo activo
    private Timer timer; // Temporizador para actualizar la posición del rectángulo
    private final int DELAY = 10; // Retardo en milisegundos para el temporizador
    
    public CuboDisparador() {
        addKeyListener(this); // Agregar el KeyListener a este panel
        setFocusable(true); // Hacer que este panel sea enfocable para que pueda detectar las pulsaciones de teclas
        
        // Crear un temporizador para actualizar la posición del rectángulo
        timer = new Timer();
        ((Object) timer).start(); // Iniciar el temporizador
    }
    
    public void paintComponent(Graphics g) {
        super.paintComponent(g);
        g.setColor(Color.RED);
        g.fillRect(cuboX, 380, 60, 20); // Dibujar el cubo en la posición actual
        if (disparoActivo) {
            g.fillRect(rectX, rectY, 10, 20); // Dibujar el rectángulo en la posición actual si hay un disparo activo
        }
    }
    
    public void keyPressed(KeyEvent e) {
        if (e.getKeyCode() == KeyEvent.VK_SPACE && !disparoActivo) { // Si se presiona la tecla "Espacio" y no hay un disparo activo
            disparoActivo = true; // Activar el disparo
            rectX = cuboX + 25; // Establecer la posición inicial en x del rectángulo disparado
        }
    }
    
    public void keyReleased(KeyEvent e) {}
    public void keyTyped(KeyEvent e) {}
    
    public static void main(String[] args) {
        JFrame frame = new JFrame("Cubo Disparador");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(400, 400);
        frame.add(new CuboDisparador());
        frame.setVisible(true);
    }
}
