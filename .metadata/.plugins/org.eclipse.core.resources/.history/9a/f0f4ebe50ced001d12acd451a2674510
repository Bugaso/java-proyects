package Codigoprincipal;
import javax.swing.JFrame;
import java.awt.event.KeyListener;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;
import java.awt.Color;
import java.awt.Frame;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.event.KeyEvent;
import java.awt.event.KeyAdapter;

public class MyFrame extends Frame implements KeyListener {
    private int x; // Posición x inicial del círculo
    private int y; // Posición y inicial del círculo

    public MyFrame() {}
    
    public MyFrame(int x, int y) {
        setSize(1280,720);
        setTitle("Moviendo un círculo");
        addKeyListener(this); // Agregar un KeyListener a la ventana
        setVisible(true);
        addKeyListener(this); // Agregar un KeyListener a la ventana
        addWindowListener(new WindowAdapter() {
            public void windowClosing(WindowEvent e) {
                dispose(); // Cerrar la ventana
            }
        });
    }

    public void paint(Graphics g) {
        g.drawOval(x, y, 50, 50);
        
    }
    public void paint1(Graphics c) {
        c.drawOval(x, y, 50, 50);
        c.setColor(Color.RED);
        
  }
    public void keyPressed(KeyEvent e) {
        int keyCode = e.getKeyCode();
        
        switch(keyCode) {
            case KeyEvent.VK_W:
                y -= 10; // Mover hacia arriba
                repaint(); // Volver a dibujar el círculo en su nueva posición
                break;
            case KeyEvent.VK_S:
                y += 10; // Mover hacia abajo
                repaint(); // Volver a dibujar el círculo en su nueva posición
                break;
            case KeyEvent.VK_A:
                x -= 10; // Mover hacia la izquierda
                repaint(); // Volver a dibujar el círculo en su nueva posición
                break;
            case KeyEvent.VK_D :
                x += 10; // Mover hacia la derecha
                repaint(); // Volver a dibujar el círculo en su nueva posición
                break;
            case KeyEvent.VK_SPACE :
                y =y++; // Mover hacia la derecha
                repaint(); // Volver a dibujar el círculo en su nueva posición
                break;
        }
        
        repaint(); // Volver a dibujar el círculo en su nueva posición
    }
    
    public void keyTyped(KeyEvent e) {}
    public void keyReleased(KeyEvent e) {}
    
    public static void main(String[] args) {
        new MyFrame();
    }
    
}






